  "repository": "git://github.com/element-gaming/logger-utils.git",
  "author": "Element Gaming <info@element-gaming.eu>",
  "contributors": [
    "Piero Nicolli <piero.nicolli@yahoo.it> (https://github.com/pnicolli)",
